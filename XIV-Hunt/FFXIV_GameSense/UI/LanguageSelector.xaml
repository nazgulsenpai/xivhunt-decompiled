<Window
	x:Class="FFXIV_GameSense.UI.LanguageSelector" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:controls="clr-namespace:FFXIV_GameSense.UI.Controls" xmlns:properties="clr-namespace:FFXIV_GameSense.Properties"
	Title="{x:Static properties:Resources.LanguageSelectorTitle}"
	Height="125"
	Width="360"
	Icon="/Resources/enemy.ico"
	ResizeMode="NoResize"
	Topmost="True"
	WindowStartupLocation="CenterScreen" xmlns:ui="clr-namespace:FFXIV_GameSense.UI"
	KeyDown="Window_KeyDown">
	<Grid>
		<TextBlock
			Name="InfoTextBlock"
			Text="{x:Static properties:Resources.LanguageSelectorInfo}"
			HorizontalAlignment="Left"
			Margin="10,12,0,11"
			VerticalAlignment="Center"
			Width="227" />
		<controls:LanguageSelector
			HorizontalAlignment="Right"
			Height="25"
			VerticalAlignment="Center"
			Margin="0,0,10,0"
			FocusManager.FocusedElement="{Binding RelativeSource={RelativeSource Self}}"
			Selector.SelectionChanged="LanguageSelector_SelectionChanged" />
		<Button
			Name="Button"
			Content="{x:Static properties:Resources.LanguageSelectorContinue}"
			HorizontalAlignment="Right"
			Margin="0,0,10,10"
			VerticalAlignment="Bottom"
			Width="100"
			Click="Button_Click" />
	</Grid>
</Window>
